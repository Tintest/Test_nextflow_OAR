process {
  executor='oar'
  queue='default'
  clusterOptions = '--project ciment -l /core=16,walltime=00:30:00'
}

 ///////////////////////////////////////////////////////////////////////
 ////////////////////////// MAJOR PARAMETERS ///////////////////////////
 ///////////////////////////////////////////////////////////////////////

 params.help = ""
 params.fastq2bam = ""

 params.sampleID = ""
 params.runID = ""
 params.genomeID = ""

 ///////////////////////////////////////////////////////////////////////
 ///////////////////// DIRECTORIES AND MAJOR FILES /////////////////////
 ///////////////////////////////////////////////////////////////////////

 params.rootDir = "/home/tintest"
 params.projectDir= "/home/tintest/PROJECTS/Test_nextflow_OAR"


 params.sampleDir= "${params.projectDir}/SAMPLE"
 params.resultDir= "${params.sampleDir}/${params.sampleID}"
